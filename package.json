{
  "name": "writer",
  "version": "1.0.0-alpha.2",
  "description": "The HTML/CSS/JS component of writer.",
  "main": "dist/index.js",
  "repository": "https://github.com/retrixe/writer.git",
  "author": "retrixe",
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "browsers": "ie >= 9"
  },
  "targets": {
    "main": {
      "context": "browser",
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      },
      "includeNodeModules": true
    }
  },
  "scripts": {
    "lint": "eslint . && tsc --noEmit",
    "start": "yarn build:js && yarn start:go",
    "start:go": "go run .",
    "build": "run-script-os",
    "build:default": "yarn build:js --no-source-maps && yarn build:go",
    "build:windows": "yarn build:default && yarn build:launcher",
    "build:go": "run-script-os",
    "build:go:default": "go build -ldflags=\"-s -w\" -o writer -v",
    "build:go:windows": "go build -ldflags=\"-s -w -H windowsgui\" -o writer.exe -v",
    "build:launcher": "go build -tags launcher -ldflags=\"-s -w\" -o launcher.exe -v launcher_windows.go",
    "build:js": "parcel build ui/index.tsx"
  },
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/material": "^5.10.0",
    "@swc/helpers": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@emotion/babel-plugin": "^11.10.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "parcel": "2.6.2",
    "run-script-os": "^1.1.6",
    "typescript": "^4.7.4"
  }
}
